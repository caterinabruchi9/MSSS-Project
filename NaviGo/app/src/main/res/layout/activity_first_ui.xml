<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<!-- Button for selecting a map, taking up 3/4 of the screen -->

    <!-- divider -->

    <Button
        android:id="@+id/buttonSelectMap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="4dp"
        android:layout_weight="3"
        android:background="@color/black"
        android:padding="16dp"
        android:text="Select Map"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAdminOptions"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#FFFFFF"
        tools:ignore="MissingConstraints" />

<!-- Button for admin options, taking up 1/4 of the screen -->
    <Button
        android:id="@+id/buttonAdminOptions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="156dp"
        android:layout_weight="1"
        android:background="#000000"
        android:padding="16dp"
        android:text="Admin Options"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>